{
  "name": "n2m-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node ./server.js",
    "start:dev": "react-scripts start",
    "build": "npm run build:style && react-scripts build",
    "build:style": "NODE_ENV=production postcss src/styles/index.css -o src/styles/tailwind.css",
    "build:style:dev": "postcss src/styles/index.css -o src/styles/tailwind.css"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "http": "0.0.0",
    "path": "^0.12.7",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-icons": "^3.9.0",
    "react-scripts": "3.4.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "autoprefixer": "^9.7.4",
    "cssnano": "^4.1.10",
    "postcss-cli": "^7.1.0",
    "tailwindcss": "^1.2.0"
  }
